# Copy this file to .env.local and replace placeholder values with your real secrets.

# NextAuth
NEXTAUTH_SECRET=replace_with_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_public_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Lemon Squeezy (for paid tier purchases)
LEMON_SQUEEZY_STORE_ID=your_store_id
LEMON_SQUEEZY_API_KEY=your_api_key
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret
LEMON_SQUEEZY_BASIC_PRODUCT_ID=product_id_basic
LEMON_SQUEEZY_PRO_PRODUCT_ID=product_id_pro
LEMON_SQUEEZY_ENTERPRISE_PRODUCT_ID=product_id_enterprise

# Optional: change NEXTAUTH_URL to https://chiapuru.com for production

# Generate NEXTAUTH_SECRET (example):
# openssl rand -base64 32
